<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar">

    </include>



        <TextView
            android:textColor="#000000"
            android:textSize="30dp"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:text="Enter the Details"
            android:id="@+id/details"
            android:layout_gravity="left|center_horizontal"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:typeface="serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:id="@+id/Name"
            android:textSize="25dp"
            android:textColor="@android:color/black"
            android:layout_below="@+id/details"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="38dp"
            android:typeface="serif"
            android:layout_marginLeft="5dp" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal"
        android:onClick="run"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/name"
        android:layout_alignBottom="@+id/Name"
        android:layout_toRightOf="@+id/textView7"
        android:layout_alignRight="@+id/amount"
        android:layout_alignEnd="@+id/amount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:id="@+id/textView7"
        android:textSize="25dp"
        android:layout_marginLeft="-5dp"
        android:textColor="@android:color/black"
        android:typeface="serif"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@+id/amount"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/amount"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/Name"
        android:layout_marginLeft="110dp"
        android:layout_alignRight="@+id/details"
        android:layout_alignEnd="@+id/details" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/textView8"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        android:typeface="serif"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/amount"
        android:layout_alignRight="@+id/Name"
        android:layout_alignEnd="@+id/Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toRightOf="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile No."
        android:id="@+id/textView9"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        android:typeface="serif"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/mobile"
        android:layout_marginLeft="130dp"
        android:layout_alignBottom="@+id/textView9"
      />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="call"
        android:id="@+id/button4"
        android:onClick="callme1"
        android:src="@drawable/phone"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/details"
        android:layout_toStartOf="@+id/details" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sms"
        android:id="@+id/button5"
        android:onClick="smsme1"
        android:src="@drawable/sms"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notify Via:"
        android:id="@+id/textView20"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:typeface="serif"
        android:textStyle="bold"
        android:layout_below="@+id/button3"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:src="@drawable/email"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/name"
        android:layout_alignEnd="@+id/name"
        android:onClick="emailme1"/>


</RelativeLayout>